# ========================================
# CursorBot Environment Configuration
# ========================================

# Telegram Bot Settings
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_ALLOWED_USERS=123456789,987654321

# ========================================
# Cursor Cloud Agent Settings
# ========================================

# Cursor API Key (from https://cursor.com/settings)
CURSOR_API_KEY=your_cursor_api_key_here

# Default GitHub repository for Cloud Agents
CURSOR_DEFAULT_REPO=https://github.com/username/repository

# ========================================
# Workspace Settings
# ========================================

# Local workspace path for file operations
CURSOR_WORKSPACE_PATH=/Users/your_username/Projects

# MCP server port (optional, for local MCP server)
CURSOR_MCP_PORT=3000

# ========================================
# Server Settings
# ========================================

SERVER_HOST=0.0.0.0
SERVER_PORT=8000
DEBUG=true

# ========================================
# Security Settings
# ========================================

SECRET_KEY=your_secret_key_here
SESSION_TIMEOUT=3600

# ========================================
# Database & Logging
# ========================================

DATABASE_PATH=./data/cursorbot.db
LOG_LEVEL=INFO
LOG_FILE_PATH=./logs/cursorbot.log
