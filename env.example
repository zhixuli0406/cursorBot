# ========================================
# CursorBot Environment Configuration
# ========================================

# Telegram Bot Settings (required)
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_ALLOWED_USERS=123456789,987654321

# ========================================
# Workspace Settings
# ========================================

# Local workspace path for file operations
CURSOR_WORKSPACE_PATH=/Users/your_username/Projects

# ========================================
# Server Settings
# ========================================

SERVER_HOST=0.0.0.0
SERVER_PORT=8000
DEBUG=false

# ========================================
# Security Settings
# ========================================

SECRET_KEY=your_secret_key_here
SESSION_TIMEOUT=3600

# ========================================
# Database & Logging
# ========================================

DATABASE_PATH=./data/cursorbot.db
LOG_LEVEL=INFO
LOG_FILE_PATH=./logs/cursorbot.log

# ========================================
# Cursor Background Agent Settings
# ========================================

# Enable Background Agent (required for /ask command)
# Set to true after configuring CURSOR_API_KEY
BACKGROUND_AGENT_ENABLED=true

# Cursor API Key (required for Background Agent)
# Get this from: https://cursor.com/dashboard?tab=background-agents
# 1. Go to cursor.com/dashboard
# 2. Click on "Background Agents" tab
# 3. Create or copy your API key
CURSOR_API_KEY=

# Optional: GitHub repository URL for Background Agent tasks
# If set, the agent will work on this repository
# Example: https://github.com/your-username/your-repo
CURSOR_GITHUB_REPO=

# Task timeout in seconds (default: 300 = 5 minutes)
BACKGROUND_AGENT_TIMEOUT=300

# Poll interval for checking task status (default: 5 seconds)
BACKGROUND_AGENT_POLL_INTERVAL=5

# ========================================
# AI Integration (Optional)
# ========================================

# OpenRouter API key for AI functionality
# Get from: https://openrouter.ai/keys
OPENROUTER_API_KEY=

# OpenRouter model (default: openai/gpt-4.1)
OPENROUTER_MODEL=openai/gpt-4.1

# Google Gemini API key for voice transcription
# Get from: https://aistudio.google.com/apikey
GOOGLE_GENERATIVE_AI_API_KEY=

# Custom prompt to add to all AI requests
CUSTOM_PROMPT=

# ========================================
# Discord Bot Settings (Optional)
# ========================================

# Enable Discord bot
DISCORD_ENABLED=false

# Discord bot token
# Get from: https://discord.com/developers/applications
DISCORD_BOT_TOKEN=

# Allowed Discord guild (server) IDs (comma-separated)
DISCORD_ALLOWED_GUILDS=

# Allowed Discord user IDs (comma-separated)
DISCORD_ALLOWED_USERS=
