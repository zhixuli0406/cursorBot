# ========================================
# CursorBot Environment Configuration
# ========================================

# Telegram Bot Settings
# Get your token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=

# Comma-separated list of allowed Telegram user IDs
# You can get your user ID from @userinfobot on Telegram
TELEGRAM_ALLOWED_USERS=

# ========================================
# Cursor Agent Settings
# ========================================

# Path to your Cursor workspace
CURSOR_WORKSPACE_PATH=

# MCP Server port for Cursor communication
CURSOR_MCP_PORT=

# Cursor executable path (optional)
CURSOR_EXECUTABLE_PATH=

# ========================================
# Server Settings
# ========================================

# API Server host and port
SERVER_HOST=
SERVER_PORT=

# Enable debug mode (set to false in production)
DEBUG=

# ========================================
# Security Settings
# ========================================

# Secret key for encryption (generate a random string)
SECRET_KEY=

# Session timeout in seconds (default: 1 hour)
SESSION_TIMEOUT=

# ========================================
# Database Settings (optional)
# ========================================

# SQLite database path
DATABASE_PATH=

# ========================================
# Logging Settings
# ========================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=

# Log file path
LOG_FILE_PATH=

CURSOR_API_KEY=
BACKGROUND_AGENT_ENABLED=